<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="150dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@drawable/hatimage"
            android:id="@+id/imageViewBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/imageViewBackground"
            app:layout_constraintEnd_toEndOf="@+id/imageViewBackground" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageViewBackground" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewBackground" android:textColor="@android:color/white"
            android:textSize="24sp" tools:text="hats" android:textStyle="bold" android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>